using System.Collections;
using System.Collections.Generic;
using UnityEngine;
/// <summary>
/// A class to give functionality to attack pick buttons
/// </summary>
public class UIGameManager : MonoBehaviour
{
    private int _chosenAttack = -1;

    /// <summary>
    /// Function applied to attack pick button, sets the chosen attack to Avoid
    /// </summary>
    /// <summary>
    public void ChooseAvoid()
    {
        _chosenAttack = 0;
    }
    
    /// <summary>
    /// Function applied to attack pick button, sets the chosen attack to Slide
    /// </summary>
    /// <summary>
    public void ChooseSlide()
    {
        _chosenAttack = 1;
    }
    
    /// <summary>
    /// returns the chosen attack
    /// </summary>
    /// <returns></returns>
    public int GetChosenAttack()
    {
        return _chosenAttack;
    }
}